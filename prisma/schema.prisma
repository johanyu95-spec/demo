generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model prescriptions {
  id                BigInt?
  code              String  @id(map: "prescription_pkey")
  name              String?
  dear              String?
  letter            String?
  concept           String?
  movie             String?
  challengeConcept  String?
  challengeKeyword  String?
  challengeActivity String?
  maintainConcept   String?
  maintainKeyword   String?
  maintainActivity  String?
  reconcileConcept  String?
  reconcileKeyword  String?
  reconcileActivity String?
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model results {
  id         BigInt   @id @default(autoincrement())
  answers    Json
  code       String
  nickname   String
  comment    String?         // ✅ 선택 필드로 변경
  created_at DateTime @default(now())  // ✅ 기본값 자동
  updated_at DateTime @updatedAt       // ✅ 수정 시 자동 갱신
}
